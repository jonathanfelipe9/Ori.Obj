package equipeSemEquipe;

	static String imprimeCor() {
		String nomeCor = "";
		
		switch (cor) { // switch (mostraCor()): substituir pelo m√©todo
		case 0:
			nomeCor = "Verde";
			break;
			
		case 1:
			nomeCor = "Amarelo";
			break;
			
		case 2:
			nomeCor = "Vermelho";
			break;
		}
		return nomeCor;
	}
}

